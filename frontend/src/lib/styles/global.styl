/* common global styles */

.wc_solana_pay_place_order
  display flex
  align-items center
  justify-content center
  span
    padding 0
    margin 0
    margin-right 0.5em
  img
    display inline-block
    padding 0
    border 0
    max-height 1.2em

.pwspfwc_popup_shadow
  box-shadow 0 4px 24px 0 var(--popup_border_shadow_color)

.pwspfwc_icon_button
  background-color transparent
  border 0
  height 2rem
  width 2rem
  padding 0
  margin-left 0.5rem
  display flex
  justify-content center
  align-items center
